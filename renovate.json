{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices",
        "config:recommended",
        "group:monorepos",
        "group:recommended",
        "group:allNonMajor"
    ],
    "digest": {
        "automerge": true
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": ["^gradle/libs.versions.toml$"],
            "matchStrings": [
                "# renovate: depName=(?<depName>.*?)\\s\\S+?\\S+\\s=\\s\"(?<currentVersion>\\S+)\""
            ],
            "datasourceTemplate": "github-tags",
            "versioningTemplate": "semver"
        }
    ]
}
